<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/toolbar_include"
        layout="@layout/design_toolbar_general" />

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.view.MTextView
                    android:id="@+id/introducingTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="INTRODUCING"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/txt_size_17" />


                <ImageView
                    android:id="@+id/iconImgView"
                    android:layout_width="@dimen/category_detail_icon_size"
                    android:layout_height="@dimen/category_detail_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_no_icon" />

                <ImageView
                    android:id="@+id/detailBannerImgView"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_no_icon" />


                <com.view.MTextView
                    android:id="@+id/noteTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/txt_size_16" />
            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/btn_type_1"
            layout="@layout/btn_type_1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</LinearLayout>